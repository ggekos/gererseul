                            <div class="col-4">
                                <input class="form-control" type="number" value="" id="quantity" name="quantity">
                            </div>
                            <button type="submit" class="btn btn-primary">Add to basket</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}